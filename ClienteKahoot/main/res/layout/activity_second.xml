<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FD8F8F"
    android:gravity="center">

    <!-- Título con el código de la sala -->

    <!-- Mensaje esperando -->

    <!-- Botón para salir (opcional) -->

    <TextView
        android:id="@+id/salaCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginBottom="20dp"
        android:text="Sala: 1234"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/esperandoMensaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/esperandoMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="80dp"
        android:text="Esperando..."
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/exitButton"
        app:layout_constraintStart_toStartOf="@+id/salaCodigo"
        app:layout_constraintTop_toBottomOf="@+id/salaCodigo" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="147dp"
        android:layout_height="74dp"
        android:layout_marginBottom="430dp"
        android:backgroundTint="#FF5722"
        android:fontFamily="sans-serif-condensed"
        android:text="Salir"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/esperandoMensaje"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="@+id/esperandoMensaje"
        app:layout_constraintTop_toBottomOf="@+id/esperandoMensaje" />

</androidx.constraintlayout.widget.ConstraintLayout>
