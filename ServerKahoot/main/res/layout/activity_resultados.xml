<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- CheckBox para mostrar u ocultar respuestas -->
    <CheckBox
        android:id="@+id/checkBoxMostrarRespuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar respuestas"
        android:padding="10dp"
        android:layout_margin="10dp" />

    <!-- Layout para mostrar los usuarios -->
    <LinearLayout
        android:id="@+id/layoutUsuarios"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Layout para mostrar las respuestas correctas -->
    <LinearLayout
        android:id="@+id/layoutCorrectas"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Layout para mostrar el ganador -->
    <LinearLayout
        android:id="@+id/layoutGanador"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
